<% bookCoverClass = locals.large ?
'book-cover-large' : '' %> 

<% bookGridClass = locals.large ?
'book-grid-large' : '' %> 

<div class="serie-grid <%= bookGridClass %> ">
    <% books.forEach(book => { %>
        <a href="/books/<%= book.id %> ">
        <img class="book-cover" <%= bookCoverClass %> src="<%= book.coverImagePath %>">
        </a>
    <% }) %>  
</div>
