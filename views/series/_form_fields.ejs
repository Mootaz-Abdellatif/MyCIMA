<div>
<label>Title</label>
<input type="text" name="title" value="<%= serie.title %>">
</div>
<div>
<label>Author</label>
<select name="author">
    <% authors.forEach(author => { %>
        <% if (author.id === serie.author) { %>
        <option selected label="<%= author.name %>" value="<%= author.id %>">
        <% } else { %>
        <option label="<%= author.name %>" value="<%= author.id %>">
        <% } %>
    <% }) %>
</select>
</div>
<div>
<label>Release Date</label>
<input type="date" name="releaseDate" 
value="<%= serie.releaseDate == null ? '' : serie.releaseDate.toISOString().split('T')[0] %>">
</div>
<div>
<label>Runtime</label>
<input type="number" name="runtime" min="15" value="<%= serie.runtime %>">
</div>
<div>
<label>Cover</label>
<input type="file" name="cover" class="filepond">
</div>
<div>
    <label>Description</label>
    <textarea name="description"><%= serie.description %></textarea>
</div>